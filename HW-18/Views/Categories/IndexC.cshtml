<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <title>لیست دسته‌بندی‌ها</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background: linear-gradient(to right, #b92b27, #1565c0);
            color: white;
        }

        .container {
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #3498db;
            color: white;
        }

        .btn {
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin: 2px;
        }

        .btn-update {
            background-color: #f0ad4e;
        }

        .btn-delete {
            background-color: #d9534f;
        }

        .btn-details {
            background-color: #5bc0de;
        }

        .btn-update:hover {
            background-color: #ec971f;
        }

        .btn-delete:hover {
            background-color: #c9302c;
        }

        .btn-details:hover {
            background-color: #31b0d5;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>لیست دسته‌بندی‌ها</h2>

        <table>
            <thead>
                <tr>
                    <th>شناسه</th>
                    <th>نام دسته‌بندی</th>
                    <th>توضیحات</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                <!-- فرض بر اینکه Model شامل لیست دسته‌بندی‌ها است -->
                @if (Model != null && Model.Any())
                {
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>@category.Description</td>
                            <td>
                                <a href="@Url.Action("Edit", "Categories", new { id = category.Id })" class="btn btn-update">بروزرسانی</a>
                                <a href="@Url.Action("Delete", "Categories", new { id = category.Id })" class="btn btn-delete">حذف</a>
                                <a href="@Url.Action("Details", "Categories", new { id = category.Id })" class="btn btn-details">مشاهده جزئیات</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">هیچ دسته‌بندی جهت نمایش موجود نیست.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
